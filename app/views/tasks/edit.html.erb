<% provide(:title, "Edit Task") %>
<h1>タスク編集</h1>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with( model: @task ,url: user_task_path, local: true, method: :patch) do |f| %>
    
      <%= f.label :name, class: "label-form" %>
      <%= f.text_field :name, class: "form-control control" %>
      
      <%= f.label :description, class: "label-form" %>
      <%= f.text_area :description, class: "form-control control", rows: 5 %>
      
      <%= f.submit "更新", class: "btn btn-primary btn-form" %>
      <%= f.submit "キャンセル", class: "btn btn-default btn-form" %>
      
    <% end %>
  </div>
</div>